{
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "classes": true,
      "jsx": true
    }
  },
  "plugins": [
    "import"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "VERSION": true,
    "DEBUG": false
  },
  "rules": {
    "camelcase": [0, {"properties": "never"}],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "import/prefer-default-export": "off",
    "import/no-extraneous-dependencies": [
      "warn",
      {
        "devDependencies": [
          "spec/**",
          "test/**",
          "tests/**",
          "**/__tests__/**"
        ],
        "optionalDependencies": false
      }
    ],
    "jsx-a11y/label-has-for": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "object-curly-spacing": [
      "off",
      "always"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "class-methods-use-this": [
      "warn",
      {
        "exceptMethods": [
          "render"
        ]
      }
    ],
    "max-len": [
      "error",
      120,
      2,
      {
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ],
    "no-underscore-dangle": [
      "off"
    ],
    "react/jsx-indent": [
      "error",
      4
    ],
    "react/jsx-indent-props": [
      "error",
      4
    ],
    "no-duplicate-imports": "off",
    // we use eslint-import-plugin instead
    "react/forbid-prop-types": [
      "error",
      {
        "forbid": [
          "any",
          "array"
        ]
      }
    ],
    "react/prefer-stateless-function": [
      "off",
      {
        "ignorePureComponents": true
      }
    ],
    "react/prop-types": [
      "warn",
      {
        "ignore": [
          "children",
          "location",
          "props"
        ],
        "customValidators": []
      }
    ],
    "react/sort-comp": "off",
    "no-plusplus": 0
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": {
          "resolve": {
            "modules": ["app", "node_modules"],
            "extensions": [".js", ".jsx"]
          }
        }
      }
    }
  }
}
